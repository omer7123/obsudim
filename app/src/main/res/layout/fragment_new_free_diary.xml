<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exercises.cbt.NewFreeDiaryFragment">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/include_simple_toolbar" />

    <TextView
        android:id="@+id/title"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Как прошел твой день?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_toolbar" />

    <EditText
        android:paddingVertical="10dp"
        android:id="@+id/field"
        style="@style/TextAppearance.Material3.BodyMedium"
        android:layout_width="match_parent"
        android:gravity="top"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@id/save_button"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        android:clickable="false"
        android:text="@string/save"
        app:layout_constraintBottom_toTopOf="@id/KPT_diary_tv" />

    <Button
        android:id="@+id/KPT_diary_tv"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp"
        android:padding="10dp"
        android:text="@string/go_to_kpt_diary"
        android:textAlignment="center"
        android:textColor="@color/md_theme_light_primary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>