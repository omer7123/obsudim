<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:id="@+id/include_toolbar"
            layout="@layout/include_simple_toolbar" />

        <include layout="@layout/include_edit_text"
            android:id="@+id/include_situation" />

        <include layout="@layout/include_edit_text"
            android:id="@+id/include_mood" />

        <include layout="@layout/include_seek_bar"
            android:id="@+id/include_level" />

        <include layout="@layout/include_edit_text"
            android:id="@+id/include_auto_thought" />

        <include layout="@layout/include_edit_text"
            android:id="@+id/include_proofs" />

        <include layout="@layout/include_edit_text"
            android:id="@+id/include_refutations" />

        <include layout="@layout/include_edit_text"
            android:id="@+id/include_alternative_thought" />

        <include layout="@layout/include_edit_text"
            android:id="@+id/include_new_mood" />

        <include layout="@layout/include_seek_bar"
            android:id="@+id/include_new_level" />

        <Button
            android:id="@+id/save_button"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save" />


    </LinearLayout>
</ScrollView>