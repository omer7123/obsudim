<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleFragment" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@color/md_theme_light_onTertiary</item>
        <item name="fontFamily">@font/cygre_semi_bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TitleFragmentPrimary" parent="TitleFragment">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="fontFamily">@font/cygre_semi_bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="SubTitleFragment" parent="TitleFragment">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/cygre_bold</item>
    </style>

    <style name="CruinnMedTitle">
        <item name="fontFamily">@font/cruinn_medium</item>
        <item name="android:textSize">96sp</item>
    </style>
    <style name="BodyM">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BodyM.Black">
        <item name="android:textColor">@color/text_default_color</item>
    </style>

    <style name="BodyM.White">
        <item name="android:textColor">@color/md_theme_light_onTertiary</item>
    </style>

    <style name="BodyL">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BodyL.Black">
        <item name="android:textColor">@color/text_default_color</item>
    </style>

    <style name="BodyL.White">
        <item name="android:textColor">@color/md_theme_light_onTertiary</item>
    </style>

    <style name="BodyMBold">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BodyMBold.Black">
        <item name="android:textColor">@color/text_default_color</item>
    </style>

    <style name="BodyMBold.White">
        <item name="android:textColor">@color/md_theme_light_onTertiary</item>
    </style>


    <style name="TitleXS">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BodyXLBold">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="BodyXL" parent="BodyXLBold">
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="BodyXSBold">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/item_indicator_bottom_bar</item>
    </style>

    <style name="CustomImageShape">
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/md_theme_light_primary</item>
        <item name="android:textAppearance">@style/BodyMBold.White</item>
    </style>
</resources>